<% if !post.private? || (post.private? && post.user == current_user) %>
  <div class="card bg-light my-3">
    <div class="card-header d-flex justify-content-between">
      <%= link_to user_path(post.user), class: 'btn' do %>
        <%= image_tag post.user.avatar_thumbnail, class: 'border rounded-circle' %>
        <span class="username"><%= post.user.username %></span>
      <% end %>
      <% if post.private? %>
        <div>
          <span class="badge badge-secondary">Private</span>
        </div>
      <% end %>
    </div>
    <%= link_to post_path(post), class: 'btn text-left' do %>
      <%= image_tag post.image, class: 'card-img' if post.image.attached? %>
      <div class="card-body p-2">
        <% if post.description.present? %>
          <p class="card-text"><%= post.description %></p>
        <% end %>
        <p class="card-text">
          <small class="text-muted"><%= time_ago_in_words(post.created_at).capitalize %></small>
        </p>
      </div>
    <% end %>
    <div class="d-flex justify-content-around">
      <div id="likes-count-<%= post.id %>" class="ml-4">
        <%= render 'posts/likes', post: post %>
      </div>

      <span>2 Comments</span>
    </div>
    <div class="card-body d-flex justify-content-around" style="margin: 0; padding: 0">
      <div id="like-link-<%= post.id %>">
        <%= render 'posts/like_link', post: post %>
      </div>
      <%= link_to '#' do %>
        <i class="fas fa-comment-dots"></i>
      <% end %>
    </div>
  </div>
<% end %>
