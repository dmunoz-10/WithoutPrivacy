<% content_for :title, 'Forgot Password' %>

<div class="row text-center">
  <div class="col-md-6 offset-md-3 mt-5">
    <h2>Forgot your password?</h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
                        html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-group mt-5">
        <%= f.input :email,
                    autofocus: true,
                    input_html: {autocomplete: 'email', class: 'form-control'},
                    wrapper: false,
                    label: false,
                    placeholder: 'Email' %>
      </div>
      <div class="form-group">
        <%= f.button :submit, 'Send me reset password instructions', class:'btn btn-outline-primary' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
