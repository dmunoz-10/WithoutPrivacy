<div class="modal fade" id="modal-notifications" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title-notifications">Notifications</h5>
        <%= link_to mark_seen_all_web_notifications_path, method: :put, remote: :true,
            class: 'btn p-0 ml-2 mt-1', 'data-toggle': 'tooltip', 'data-placement': 'right',
            title: 'Mark as seen all notifications', style: 'color: green' do %>
          <i class="fas fa-check-double"></i>
        <% end %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul class="list-group list-group-flush" id="notifications-list">
        </ul>
      </div>
    </div>
  </div>
</div>
